<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6EEEB"
    tools:context=".StockFragment">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:background="#F6EEEB"
        app:cardElevation="8dp"
        android:layout_marginBottom="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/ms_Vimage"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:src="@drawable/innova" />

                <TextView
                    android:id="@+id/ms_Vyear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="0dp"
                    android:text="2020"
                    android:textColor="#FB0808"
                    android:textSize="15dp" />



                <TextView
                    android:id="@+id/ms_Vprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="\u20B9 1500000"
                    android:textColor="@color/black"
                    android:textSize="15dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ms_Vname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="CRYSTA"
                    android:textColor="#F30F0F"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ms_Vregno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KA 01 2255"
                        android:textColor="@color/black"
                        android:textSize="15dp" />


                    <TextView
                        android:id="@+id/ms_colour"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="WHITE"
                        android:textColor="@color/black"
                        android:textSize="15dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ms_Vtype"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="MPV"
                        android:textColor="@color/black"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/ms_Vtransmission"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="AUTOMATIC"
                        android:textColor="@color/black"
                        android:textSize="10dp" />


                    <TextView
                        android:id="@+id/ms_Vownership"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="SECOND"
                        android:textColor="@color/black"
                        android:textSize="10dp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ms_Vcc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2399 cc"
                        android:textColor="@color/black"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/ms_Vkm"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="15678 KM"
                        android:textColor="@color/black"
                        android:textSize="10dp" />


                    <TextView
                        android:id="@+id/ms_Vfuel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="DIESAL"
                        android:textColor="@color/black"
                        android:textSize="10dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/vDetailsUpdate"
                        android:layout_width="70dp"
                        android:layout_height="20sp"
                        android:background="@drawable/btnbg_rose"
                        android:gravity="center"
                        android:text="VEHICLE"
                        android:textColor="@color/white"
                        android:textSize="10dp" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />



                    <TextView
                        android:id="@+id/vPriceUpdate"
                        android:layout_width="70dp"
                        android:layout_height="20sp"
                        android:gravity="center"
                        android:background="@drawable/btnbg_rose"
                        android:text="PRICE"
                        android:textColor="@color/white"
                        android:textSize="10dp" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />



                    <TextView
                        android:id="@+id/vDocumentsUpdate"
                        android:layout_width="70dp"
                        android:layout_height="20sp"
                        android:background="@drawable/btnbg_rose"
                        android:text="DOCUMENTS"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="10dp" />




                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/vDamagesUpdate"
                        android:layout_width="50dp"
                        android:layout_height="20sp"
                        android:background="@drawable/btnbg_rose"
                        android:text="DAMAGES"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="10dp" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/vTyresCoUpdate"
                        android:layout_width="50dp"
                        android:layout_height="20sp"
                        android:gravity="center"
                        android:background="@drawable/btnbg_rose"
                        android:text="TYRES"
                        android:textColor="@color/white"
                        android:textSize="10dp" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />



                    <TextView
                        android:id="@+id/vAccessoriesUpdate"
                        android:layout_width="50dp"
                        android:layout_height="20sp"
                        android:background="@drawable/btnbg_rose"
                        android:text="ACCESS."
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="10dp" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />


                    <TextView
                        android:id="@+id/vAlterationupdates"
                        android:layout_width="50dp"
                        android:layout_height="20sp"
                        android:background="@drawable/btnbg_rose"
                        android:text="ALTRN."
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="10dp" />




                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/vOthersDupdates"
                        android:layout_width="70dp"
                        android:layout_height="30sp"
                        android:text="OTHERS"
                        android:gravity="center"
                        android:background="@drawable/btnbg_rose"
                        android:textColor="@color/white"
                        android:textSize="10dp" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />



                    <TextView
                        android:id="@+id/vRemarksupdates"
                        android:layout_width="70dp"
                        android:layout_height="20sp"
                        android:gravity="center"
                        android:background="@drawable/btnbg_rose"
                        android:text="REMARKS"
                        android:textColor="@color/white"
                        android:textSize="10dp" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />



                    <TextView
                        android:id="@+id/vOwnersDupdates"
                        android:layout_width="70dp"
                        android:layout_height="20sp"
                        android:background="@drawable/btnbg_rose"
                        android:text="OWNERS"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="10dp" />




                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    </LinearLayout>



</androidx.drawerlayout.widget.DrawerLayout>